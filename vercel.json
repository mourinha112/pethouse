{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/auth/index.js", "use": "@vercel/node" },
    { "src": "api/dashboard.js", "use": "@vercel/node" },
    { "src": "api/dashboard/alerts.js", "use": "@vercel/node" },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/auth", "destination": "/api/auth/index.js" },
    { "source": "/api/auth/(.*)", "destination": "/api/auth/index.js" },
    { "source": "/api/dashboard/alerts", "destination": "/api/dashboard/alerts" },
    { "source": "/api/dashboard", "destination": "/api/dashboard" },
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
